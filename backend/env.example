# RouteWhisper Backend Environment Variables
# Copy this file to .env and fill in your actual values

# PostgreSQL Database Configuration (Structured Data)
DATABASE_URL=postgresql://username:password@localhost:5432/routewhisper_db

# MongoDB Atlas Configuration (Flexible Content)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/routewhisper_content?retryWrites=true&w=majority
MONGODB_DATABASE=routewhisper_content

# Redis Configuration (Caching & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600  # Cache TTL in seconds

# API Keys (to be obtained during development)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
WIKIPEDIA_API_KEY=your_wikipedia_key_here
YELP_API_KEY=your_yelp_api_key_here
GOOGLE_PLACES_API_KEY=your_google_places_key_here
GASBUDDY_API_KEY=your_gasbuddy_key_here

# Hotel Booking APIs
BOOKING_COM_API_KEY=your_booking_api_key_here
HOTELS_COM_API_KEY=your_hotels_api_key_here

# Application Settings
DEBUG=True
SECRET_KEY=your_secret_key_here
API_V1_PREFIX=/api/v1

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO 